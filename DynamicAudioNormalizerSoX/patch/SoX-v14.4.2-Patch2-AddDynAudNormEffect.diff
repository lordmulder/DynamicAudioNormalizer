+	switch(logLevel)
+	{
+	case 0:
+		lsx_report("%s", message);
+		break;
+	case 1:
+		lsx_warn("%s", message);
+		break;
+	case 2:
+		lsx_fail("%s", message);
+		break;
+	}
+}
